<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#C6F8F4"
        android:calendarTextColor="#FFFFFF"
        android:dayOfWeekBackground="#FFFFFF"
        android:foregroundTint="#FFFFFF"
        android:headerBackground="#FF0004FF"
        android:yearListSelectorColor="#33E6AD" />

    <Button
        android:id="@+id/btn"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:text="Назначить дату оповещения" />

</LinearLayout>